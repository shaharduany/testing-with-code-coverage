{
  "include": ["src/**/*"],
  "exclude": [
    "coverage/**",
    "dist/**", 
    "test/**",
    "**/*.test.js",
    "**/*.spec.js",
    "**/__tests__/**"
  ],
  "reporter": ["text", "json", "html", "markdown-details"],
  "reportsDir": "./coverage",
  "checkCoverage": true,
  "branches": 80,
  "functions": 80,
  "lines": 80,
  "statements": 80,
  "all": true,
  "clean": true
} 